@model Rocky.Models.Product

<!-- Имя контроллера не указывается, т.к. был использован атрибут ActionName("Delete")
для метода DeletePost, т.е. используется метод по умолчанию Delete -->
<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Product</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <!-- Название берется из имени модели-->
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <!-- Значения автоматически подставляются,
                        т.к. свойство модели указано в тег-хелпере -->
                        <input asp-for="Name" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Price"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Price" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Description"></label>
                    </div>
                    <div class="col-8">
                        <!-- Summernote -->
                        <textarea asp-for="Description" disabled class="form-control summernote"></textarea>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Category.Name" disabled class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="ApplicationTypeId"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="ApplicationType.Name" disabled class="form-control" />
                    </div>
                </div>


                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">

                            <button type="submit" class="btn btn-danger w-100" value="Update">Delete</button>

                        </div>
                        <div class="col">
                            <!-- Имя контроллера не указывается, т.к. перемещение в рамках одного контроллера-->
                            <a asp-action="Index" class="btn btn-success w-100"><i class="fas fa-sign-out-alt"></i> Back</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                @* Keep this empty *@
                @if (Model.Id != 0)
                {
                    <img src="@WC.ImagePath@Model.Image" class="w-100" style="border-radius: 5px; border: 1px solid #bbb" />
                }
            </div>
        </div>
    </div>

</form>

<!-- Скрипты для валидации на стороне клиента -->
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    <script>
        $(document).ready(function() {
            $('.summernote').summernote({
                height: 250,
                disable: true
            });
        });

    </script>
    }